{
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorBlinking": "solid",
    "editor.detectIndentation": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.snippetSuggestions": "bottom",
    "editor.tabCompletion": "on",
    "files.eol": "\n",
    "files.insertFinalNewline": true,

    "task.problemMatchers.neverPrompt": true,
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.hideCondition": "never",
    "terminal.integrated.tabs.showActiveTerminal": "always",

    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.inlineSuggest.enabled": true,
    "editor.fontLigatures": true,
    
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "workbench.editor.languageDetection": true,

    "oneDarkPro.bold": true,
    "oneDarkPro.vivid": true,
    "telemetry.telemetryLevel": "off",
    

    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.fontSize": 17,

    "editor.minimap.enabled": true,
    "editor.fontFamily": "'JetBrainsMono Nerd Font','mononoki Nerd Font','Iosevka', Consolas, 'Courier New', monospace",
    "workbench.iconTheme": "material-icon-theme",
    "liveServer.settings.donotShowInfoMsg": true,
    "explorer.confirmDragAndDrop": false,
    "liveServer.settings.donotVerifyTags": true,
    "workbench.colorTheme": "Community Material Theme Darker",
    "workbench.layoutControl.enabled": false,
   
    "terminal.integrated.cursorBlinking": true,
    "quokka.startViewStatusBar": true,
    "quokka.automaticRestart": true,
    "window.commandCenter": true,
    "window.menuBarVisibility": "toggle",
    "workbench.statusBar.visible": true,
    // "workbench.productIconTheme": "fluent-icons",
    
    // "python.analysis.diagnosticMode": "workspace",
    // "python.diagnostics.sourceMapsEnabled": true,
    // "errorLens.statusBarMessageEnabled": true,


    "mergeEditor.diffAlgorithm": "experimental",
    "workbench.tree.expandMode": "doubleClick",
    "terminal.integrated.smoothScrolling": true,
    "workbench.editor.splitInGroupLayout": "vertical",
    "window.titleBarStyle": "custom",
    "Lua.telemetry.enable": false,
    "editor.mouseWheelZoom": true,
    "editor.semanticHighlighting.enabled": true,
    "workbench.preferredDarkColorTheme": "Community Material Theme Darker",
    "oneDarkPro.editorTheme": "One Dark Pro Darker",

    "window.customMenuBarAltFocus": false,
    "window.enableMenuBarMnemonics": false,
    "workbench.startupEditor": "none",
    "window.restoreWindows": "none",

    //live server
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
    "editor.linkedEditing": true,
    "workbench.activityBar.visible": false
}
